<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://kit.fontawesome.com/dba7ebacef.js" crossorigin="anonymous"></script>

    <!-- CSS Local -->
    <link rel="stylesheet" href="static/css/styles.css" />

    <title>Administrador de Cheques</title>
  </head>
  <body>
   
      <div class="grid-container">
          <!-- Sección superior -->
          <div class="header box-shd">
             
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded shadow-lg">
                  <div class="container">
                      
                      <div class="me-auto gap-4" id="navbarNav">
                          <ul class="navbar-nav ms-auto">
                              <li class="nav-item me-5">
                                  <a class="nav-link active" href="/bancos">
                                      <i class="fas fa-university"></i> Bancos
                                  </a>
                              </li>
                              <li class="nav-item me-5">
                                  <a class="nav-link active" href="/chequeras">
                                      <i class="fas fa-book"></i> Chequeras
                                  </a>
                              </li>
                              <li class="nav-item me-5">
                                  <a class="nav-link active" href="/cheques">
                                      <i class="fas fa-money-bill"></i> Cheques
                                  </a>
                              </li>
                              <li class="nav-item me-5">
                                  <a class="nav-link active" href="#">
                                      <i class="fas fa-chart-bar"></i> Reportes
                                  </a>
                              </li>
                              <li class="nav-item me-5">
                                  <a class="nav-link active" href="/logout">
                                      <i class="fas fa-right-from-bracket"></i> Salir
                                  </a>
                              </li>
                          </ul>
                      </div>
                      <a class="navbar-brand ms-auto" href="#">
                          <i class="fas fa-money-check-alt"></i> ChequesCloud
                      </a>
                      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                          <span class="navbar-toggler-icon"></span>
                      </button>
                  </div>
              </nav>
          </div>

          <div>
            {{{body}}}
          </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

      <div class="container mt-3">
        <!-- Alerta de éxito -->
        <div id="alertSuccess" class="alert alert-success alert-dismissible fade show d-none" role="alert">
            <strong>¡Éxito!</strong> El producto fue eliminado correctamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Alerta de error -->
        <div id="alertError" class="alert alert-danger alert-dismissible fade show d-none" role="alert">
            <strong>¡Error!</strong> No se pudo eliminar el producto. Intenta nuevamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

  </body>
</html>