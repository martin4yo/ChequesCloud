# Copy this file to .env.local and update with your server's IP address
# This file will override other .env files and is gitignored

# API Configuration - Replace with your server's IP address
VITE_API_BASE_URL=http://YOUR_SERVER_IP:3000/api

# Example for local network:
# VITE_API_BASE_URL=http://192.168.1.100:3000/api

# Example for production server:
# VITE_API_BASE_URL=http://your-domain.com:3000/api
# VITE_API_BASE_URL=https://api.your-domain.com/api

# Environment
VITE_NODE_ENV=production